---
import Layout from "./Layout.astro";

const { title } = Astro.props;
---

<Layout title={title} isAbsolute={false}>
  <section class="h-[50vh] max-md:h-[20vh] bg-primary w-full relative">
    <h1
      class="absolute font-black bottom-6 max-md:text-6xl text-primary-content left-6 text-9xl"
    >
      {title}
    </h1>
  </section>
  <slot />
</Layout>
