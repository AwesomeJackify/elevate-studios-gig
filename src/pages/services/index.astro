---
import PageLayout from "../../layouts/PageLayout.astro";
import config from "../../config.json";
import { Icon } from "astro-icon/components";
import services from "../../data/services";
---

<PageLayout title="Services">
  <div class="flex flex-col py-32 max-md:py-16 gap-32 max-md:gap-16">
    <section class="px-4">
      <div class="max-w-screen-2xl mx-auto flex flex-col items-center gap-16">
        <h1
          class="text-center text-4xl max-w-xl w-full font-medium text-secondary-content"
        >
          We produce the media so that you can focus on what matters
        </h1>
      </div>
    </section>
    <section>
      <div>
        <div
          class="max-w-screen-2xl mx-auto px-4 flex flex-col gap-32 max-md:gap-16"
        >
          {
            services.map((service, index) => (
              <div class="grid grid-cols-2 max-md:grid-cols-1 gap-16 place-items-center">
                <video
                  loop
                  autoplay
                  muted
                  playsinline
                  controls
                  class={`w-full h-full object-cover ${index % 2 == 0 ? "md:order-2" : ""}`}
                >
                  <source src={service.videoUrl} type="video/mp4" />
                </video>
                <div class={`flex flex-col gap-4 text-secondary-content`}>
                  <p class="text-xl whitespace-pre-line">
                    {service.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</PageLayout>
