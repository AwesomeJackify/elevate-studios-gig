---
import PageLayout from "../../layouts/PageLayout.astro";
import { Image } from "astro:assets";
import programs from "../../data/programs.ts";
---

<PageLayout title="Programs">
  <section class="py-16">
    <div
      class="flex items-center justify-center flex-col max-w-screen-xl mx-auto gap-16 px-4"
    >
      <div class="flex flex-col items-center gap-8">
        <h1 class="text-6xl text-center font-bold">Community Impact</h1>
        <h2 class="text-xl max-w-2xl w-full text-center font-extralight">
          By choosing Elevate Studios, you're not just getting professional
          media servicesâ€”you're contributing to a greater cause. Take a look at
          our outreach programs.
        </h2>
      </div>
      <div
        class="grid grid-cols-3 gap-16 max-md:grid-cols-1 grid-rows-1 h-full"
      >
        {
          programs.map((program) => (
            <a
              href={program.url}
              class="group flex flex-col gap-8 bg-white p-8 shadow-2xl"
            >
              <Image
                src={program.image}
                alt={program.name}
                class="group-hover:scale-105 group-hover:rotate-3 transition-all w-full object-contain aspect-square object-center"
              />
              <div class="flex flex-col items-center gap-2">
                <h3 class="text-center text-3xl font-bold">{program.name}</h3>
                <p class="text-center text-md font-extralight">
                  {program.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</PageLayout>
